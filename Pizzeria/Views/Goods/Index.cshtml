@model IEnumerable<Pizzeria.Models.Good>

@{
    ViewBag.Title = "Index";
}

<h2>LE PIZZE IN CATALOGO</h2>

<table class="table">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
        <th scope="col" style="width:80px;">@Html.DisplayNameFor(model => model.Price)</th>
        <th scope="col">@Html.DisplayNameFor(model => model.Ingredients)</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.GoodId</th>
            <td>@item.Name</td>
            <td>$ @(item.Price.ToString("0.00"))</td>
            <td>@item.Ingredients</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.GoodId }, new { @class = "btn btn-success" })</td>
            <td>@Html.ActionLink("Details", "Details", new { id = item.GoodId }, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.GoodId }, new { @class = "btn btn-danger" })</td>
        </tr>
    }

</table>
