@model Pizzeria.Models.Good

@{
    ViewBag.Title = "Edit";
}

<h2 class="mt-3">CAMBIA LA PIZZA</h2>
<div class="mt-3">
    @using (Html.BeginForm("Edit", "Goods", new { Area = "" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.GoodId)
        <div class="row row-cols-1">
            <div class="col">
                @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Name") ? "" : "is-invalid")}" } })
                @Html.ValidationMessageFor(model => model.Name, null, new { htmlAttributes = new { @class = "invalid-feedback mb" }, style = "color:red;" })
                <div class="mb-3"></div>
            </div>
        </div>
        <div class="row row-cols-1">
            <div class="col">
                @Html.LabelFor(model => model.Image, new { @class = "form-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Cognome") ? "" : "is-invalid")}" } })
                @Html.ValidationMessageFor(model => model.Image, null, new { htmlAttributes = new { @class = "invalid-feedback" }, style = "color:red;" })
                <div class="mb-3"></div>
            </div>
        </div>
        <div class="row row-cols-1">
            <div class="col">
                @Html.LabelFor(model => model.Price, new { @class = "form-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Price") ? "" : "is-invalid")}", type = "number", step = "0.01" } })
                @Html.ValidationMessageFor(model => model.Price, null, new { htmlAttributes = new { @class = "invalid-feedback" }, style = "color:red;" })
                <div class="mb-3"></div>
            </div>
        </div>
        <div class="row row-cols-1">
            <div class="col">
                @Html.LabelFor(model => model.Ingredients, new { @class = "form-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Ingredients, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Ingredients") ? "" : "is-invalid")}", type = "text" } })
                @Html.ValidationMessageFor(model => model.Ingredients, null, new { htmlAttributes = new { @class = "invalid-feedback" }, style = "color:red;" })
                <div class="mb-3"></div>
            </div>
        </div>
        <div class="row row-cols-1">
            <div class="col">
                <button type="submit" class="btn btn-success mt-3">Conferma</button>
            </div>
        </div>
    }
</div>